<p id="notice"><%= notice %></p>

<h2>Listing Ideas</h2>

<h6> <b><%= link_to 'Sort: Ascending', ascending_path %></b> </h6> 
<h6> <b><%= link_to 'Sort: Descending', descending_path %></b> </h6>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Platform</th>
      <th>Help needed</th>
      <th>Developer</th>
      <th>Designer</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.platform.name %></td>
        <td><%= idea.help_needed %></td>

       <td><% if idea.developer==0 %>
           <li> <%= link_to 'Available',join_developer_idea_path(idea) %></li>
           <%else%>
           <label value=<%=current_user.id = :developer%>>
        <%end%></td>
        
        <td>
        <% if idea.designer== 0 %>
           <li> <%= link_to 'Available',join_designer_idea_path(idea) %></li>
           <%else%>
           <label value=<%=current_user.id = :designer%>> 
        <%end%></td>
        
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
           <% end %>

  </tbody>
</table>

<b><%= link_to 'New Idea', new_idea_path %></b>
