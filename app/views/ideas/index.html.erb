<p id="notice"><%= notice %></p>

<h2>Listing Ideas</h2>

<h6> <b><%= link_to 'Sort: Ascending', ascending_path %></b> </h6> 
<h6> <b><%= link_to 'Sort: Descending', descending_path %></b> </h6>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Platform</th>
      <th>Help needed</th>
      <th>Developer</th>
      <th>Designer</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.platform_id %></td>
        <td><%= idea.help_needed %></td>

       <td><%= idea.developer %></td> 
       <% if idea.developer==0 %>
           <li> <%= link_to 'join_developer',Free %></li>
           <%else%>
           return @user
        <%end%>
        
        <td><%= idea.designer %></td>
        <% if idea.designer==0 %>
           <li> <%= link_to 'join_designer',Free %></li>
           <%else%>
           return @user
        <%end%>
        
        <td><%= link_to 'Toggle Admin',
make_admin_user_path(user) %></td>
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
           <% end %>

  </tbody>
</table>

<b><%= link_to 'New Idea', new_idea_path %></b>
