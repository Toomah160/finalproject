<%= simple_form_for(@idea) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :skills_required %>
    <%= f.input :description %>
     <%= f.association :platform, as: :radio_buttons%>
    <%= f.input :help_needed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
