<%= simple_form_for(@idea) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :platform ,label_method: :name%> 

    <%= f.input :help_needed %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

